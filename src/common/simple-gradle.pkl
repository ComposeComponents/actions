open module simple
extends "base.pkl"
import "common.pkl"

hidden extraBuildSteps: Listing<Step>
hidden modules: List<String>
hidden jobName: String
hidden gradleTask: String
hidden javaVersion = "17"

on = new On {
    push = new Push {
        branches = new Listing {
            "main"
            "develop"
            "release/**"
        }
    }
    pull_request = new PullRequest {
        branches = new Listing {
            "main"
            "develop"
        }
    }
}

jobs = new Mapping {
    ["\(jobName)"] = new Job {
        strategy = new JobStrategy {
            matrix = new Mapping {
                ["module"] = modules
            }
        }
        steps = new Listing {
            common.checkout
            common.setupJdk(javaVersion)
            ...extraBuildSteps
            ...common.gradle("\(jobName.capitalize())", "${{ matrix.module }}:\(gradleTask)", new Mapping {})
        }
    }
}